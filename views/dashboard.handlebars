<!-- DASHBOARD HTML TEMPLATE FOR DISPLAYING EXISTING BLOGS AND OPTION TO ADD NEW -->
    <!-- dashboard header  -->
    <hr>
    <h2 style="text-align: center;">Dashboard</h2>
    <p style="text-align: center;"><a href="/comment/{{session_user_id}}">Click here to view and edit your comments</a></p>
    <hr>
<div class="dashboard-container container d-flex flex-column align-items-center ">

    <!-- add a blog post form  -->
    <div class="add-blog-container container card">
        <div class="mb-1 p-1">
            <label for="post-title" class="form-label">Would you like to add a new blog post?</label>
            <textarea class="form-control" placeholder="Title of the Blog" id="post-title" rows="1"></textarea>
        </div>
        <div class="mb-3 p-1 d-flex align-items-end flex-column">
            <label for="post-content" class="form-label"></label>
            <textarea class="form-control" placeholder="Contents of the Blog" id="post-content" rows="3"></textarea>
            <button id = "postButton" class="btn btn-sm btn-outline-secondary " type="button"><i class='fas fa-plus' style='color:#ffc107'></i> Add Post</button>
        </div>
    </div>
    
    <!-- existing blogs div -->
    {{#if userBlogs}}
    <h5 class="dashboard-header">Blog Manager - View Edit or Delete your posts below</h5>
    {{else}}
    <h5 class="dashboard-header">You have not created any blogs yet. </h5>
    {{/if}}

    {{#each userBlogs as |userBlog|}}
    <div class="container existing-blogs" >
        <!-- template for existing blog with icons for editing  -->
        <div class="card card-custom m-1" href=""> 
            <p style="font-size:10px" >ID #{{id}}</p>
            <h2 class="d-flex flex-wrap">
                <span value = {{id}} id="viewIcon" class="view-icon" title="View Comments"><i value = {{id}}  class='fas fa-eye m-2'></i></span>
                <span value = {{id}} id="deleteIcon" class="delete-icon" title="Delete Post"><i value = {{id}} class='fas fa-trash m-2'></i></span>
                <span value = {{id}} id="editIcon" class="edit-icon" title="Edit Post" ><i value = {{id}} class='fas fa-pencil-alt m-2'></i></span>
                {{title}}
            </h2>
            <h5>Created by: <span class="span-username">{{user.name}}</span></h5>
            <p class="blog-text-contents">{{contents}} </p>
            <h5 class="date" style="text-align:right;"><span class="span-date">Posted {{days_ago created_at}} on {{format_date created_at}}</span></h5>
        </div>

    </div>
    {{/each}}

</div>
{{#if userBlogs}}
<script src="/js/dashboard.js"></script>
{{/if}}
<script src="/js/blogpost.js"></script>
